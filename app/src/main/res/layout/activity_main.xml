<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myappcompany.rob.logindemo.MainActivity">

    <Button
            android:id="@+id/changeCatBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changeCatAction"
            android:text="Change Cat"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="14dp" android:layout_marginEnd="9dp" android:layout_marginRight="9dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="392dp"
            android:layout_height="702dp" app:srcCompat="@drawable/cat2" android:id="@+id/catImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="Cartoon Kitty 2"/>
</android.support.constraint.ConstraintLayout>
